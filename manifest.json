{
  "manifest_version": 3,
  "name": "Ai helper",
  "version": "1.0.0",
  "action": { "default_popup": "index.html" },
  "permissions": ["storage", "activeTab", "scripting"],
  "content_scripts": [
    {
      "js": ["src/content.tsx"],
      "matches": ["https://leetcode.com/problems/*"]
    }
  ],
  "background": {
    "service_worker": "src/background.js"
  }
}
